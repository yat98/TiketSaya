<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Medium -->
    <style name="TextMedium">
        <item name="android:fontFamily">@font/mmedium</item>
    </style>

    <style name="TextMedium.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextMedium.Gray">
        <item name="android:textColor">@color/colorGraySecondary</item>
    </style>

    <style name="TextMedium.White.BtnBlue">
        <item name="android:background">@drawable/ic_btn_blue</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="TextMedium.Gray.BtnWhite">
        <item name="android:background">@drawable/ic_btn_white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <!-- Light -->
    <style name="TextLight">
        <item name="android:fontFamily">@font/mlight</item>
    </style>

    <style name="TextLight.Gray">
        <item name="android:textColor">@color/colorGraySecondary</item>
    </style>

    <style name="TextLight.Gray.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextLight.Gray.Center.Large">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="TextLight.Gray.Label">
        <item name="android:layout_marginBottom">@dimen/label_margin_bottom</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextLight.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextLight.White.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextLight.White.TextLarge">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="TextLight.White.Center.TextNormal">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="TextLight.EditText">
        <item name="android:background">@drawable/ic_edit_text_gray</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/edit_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/edit_text_padding_vertical</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="TextLight.EditText.InputText">
        <item name="android:inputType">text</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_margin_bottom</item>
    </style>

    <style name="TextLight.EditText.InputPassword">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextLight.EditText.InputEmailAddress">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <!-- Regular -->
    <style name="TextRegular">
        <item name="android:fontFamily">@font/mregular</item>
    </style>

    <style name="TextRegular.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextRegular.White.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextRegular.White.Center.Large">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <!-- CardView -->
    <style name="CardView">
        <item name="android:padding">@dimen/cardview_padding</item>
    </style>

    <!-- ImageButton -->
    <style name="TextMedium.Gray.BtnWhite.ImageButtonBack">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <!-- Soft Pushing Keyboard -->
    <style name="AppTheme.KeyboardSoft">
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!-- Background Blue -->
    <style name="BackgroundBlue">
        <item name="android:background">@drawable/ic_gradient_blue</item>
    </style>

    <style name="BackgroundBlue.HeightHalf">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
    </style>
</resources>
